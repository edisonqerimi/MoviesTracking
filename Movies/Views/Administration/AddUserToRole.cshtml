@model AddUserToRoleViewModel
@{
    ViewBag.Title = "Add User";
    string id = ViewBag.RoleId;
}

<div class="flex justify-center">
     <div class="sm:w-96 w-full">
            <h1 class="font-bold text-xl">Add User to Role</h1>

            <form method="post" asp-action="AddUserToRole" enctype="multipart/form-data" class="form-control">
                <div asp-validation-summary="All" class="text-red-400"></div>
                <label class="label">
                    <span class="label-text">Role Id</span>
                </label>
                <input type="text" class="input" asp-for="Id" disabled />
                <label class="label">
                    <span class="label-text">Username</span>
                </label>
                <input asp-for="Username" type="text" placeholder="Enter username" class="input input-bordered">
                <span asp-validation-for="Username" class="text-red-400"></span>
                <div class="flex gap-2 justify-end">
                    <a asp-controller="Administration" asp-action="EditRole" asp-route-id="@Model.Id" class="btn btn-primary mt-3">Back</a>
                    <button type="submit" class="btn btn-success mt-3">Add User</button>
                </div>
            </form>
        </div>
    </div>










